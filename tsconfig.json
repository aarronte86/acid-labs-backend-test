{
  "compilerOptions": {
    "baseUrl": "./src",
    "lib": ["es2017", "dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "paths": {
      "src/*": ["*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
